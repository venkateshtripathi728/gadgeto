        <%= cl_image_tag(current_user.photo.key, class: "avatar-small") %>
      <% else %>
        <%= cl_image_tag("ylqaiehw0slcqpsbivst.png", class: "avatar-small") %>
      <%end %>
    </div>
    <% end %>
